<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach( function (newListItem) { %>
      <form class="" action="/delete" method="post">

       <div class="item">
         <input type="checkbox" name="checkbox" value="<%= newListItem._id %>" onChange="this.form.submit()">
         <p><%=  newListItem.name  %></p>
       </div>
       <input type="hidden" name="listName" value="<%= listTitle %>">  <!--this input is to be able to get the list in which the newListItem was inserted.-->

      </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>" >+</button>
      </form>
  </div>

<%- include("footer") -%>
